-- Example Query (PostgreSQL)

--display the count of movies in the database
SELECT 
COUNT(*)
FROM "CharlotteChaze/BreakIntoTech"."netflix_titles_info"
WHERE type = 'Movie';

--display the date the newest batch was added to the database
SELECT 
max(date(date_added))
FROM "CharlotteChaze/BreakIntoTech"."netflix_titles_info";

--display all items in alphabetical order
SELECT title
FROM "CharlotteChaze/BreakIntoTech"."netflix_titles_info" 
ORDER BY title asc;

--display the director of the movie 'Bright Star'
SELECT director
FROM "CharlotteChaze/BreakIntoTech"."netflix_people" people
LEFT JOIN "CharlotteChaze/BreakIntoTech"."netflix_titles_info" titles
on people.show_id = titles.show_id
WHERE titles.title = 'Bright Star';

--display the movie with the oldest release date
SELECT
title,
release_year
FROM "CharlotteChaze/BreakIntoTech"."netflix_titles_info"
WHERE type = 'Movie'
ORDER BY release_year asc
LIMIT 1;
